---
layout: base.njk
---
<div class="ph3 ph0-ns pt4 pt6-ns w-100">
    <div class="w-100 w-80-m w-70-l center tl">
        <div class="dt-ns pt2 pt5-ns">
            <div class="dt-row-ns">
                <div class="dtc-ns tc center pa2 pa1-m pa0-l tl-ns w5">
                    <img class="ba br3 b--transparent" src="{{ workshop.img }}" alt="{{ workshop.alt }}" />
                </div>
                <div class="dtc-ns ph2 ph3-m ph5-l v-top">
                    <h1 class="f2 f1-ns pb1 pt0-ns mb1 mt0-ns tc tl-ns">{{ workshop.title }}</h1>
   
                    <div class="f5 lh-copy mw6 mw7-ns markdown-body">
                        {% markdown workshop.description %}
                    </div>
                    <div class="f5 lh-copy mw6 mw7-ns markdown-body">
                        {% markdown workshop.notes %}
        
                    {% if workshop.session %}
                        <div class="dt w-100">
                            <div class="dt-row">
                                <div class="dtc i pv2 w3 pr3 f5">Prerequisites</div>
                                <div class="dtc pv2 b mw5 mw6-ns f5">
                                    {{ workshop.session.prerequisites }}
                                </div>
                            </div>
                            <div class="dt-row mw6 mw7-ns">
                                <div class="dtc i w3 pr3 f5">Location</div>
                                <div class="dtc pv2 b mw5 mw6-ns f5">
                                    {{workshop.session.location }}
                                </div>
                            </div>
                            <div class="dt-row mw6 mw7-ns">
                                <div class="dtc i w3 pr3 f5">When</div>
                                <div class="dtc pv2 b mw5 mw6-ns f5">
                                    {{workshop.session.when }}
                                </div>
                            </div>
                            <div class="dt-row mw6 mw7-ns">
                                <div class="dtc i w3 pr3 f5">Duration</div>
                                <div class="dtc pv2 b mw5 mw6-ns f5">
                                    {{workshop.session.duration }}
                                </div>
                            </div>
                            {% for speaker in workshop.speakers %}

                                <div class="dt-row mw6 mw7-ns">
                                    <div class="dtc i w3 pr3 f5">Speaker</div>
                                    <div class="dtc pv2 mw5 mw6-ns f5">
                                        <div class="b">{{ speaker.name }}</div>
                                        <div class="pv1 pv3-ns"> 
                                            {% for network in speaker.social %}
                                                <a class="no-underline v-mid" href="{{ network.link }}" target="_blank"><img class="h2 w2 pr2 white f5 v-mid" src="{{ network.icon }}" alt="{{ network.name }}" /></a>
                                            {% endfor %}
                                        </div> 
                                        <img class="ba br3 b--transparent pt2" src="{{ speaker.img }}"" />
                                        <div class="f5 lh-copy mw6 mw7-ns markdown-body">
                                            {% markdown speaker.bio %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
     
                    {% endif %}
                    <div class="dt-ns pt2 pt1-ns">

                      

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    
